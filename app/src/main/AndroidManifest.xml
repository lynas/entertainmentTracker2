<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lynas.entertainmenttracker2">

    <application
            android:name=".ETRoot"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".RootActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity">
        </activity>
        <activity
                android:name=".activity.tv.TvShowActivity"
                android:label="@string/title_activity_tv_show"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activity.tv.TVSeasonActivity"
                android:label="@string/title_activity_tvseason"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activity.tv.TVEpisodeActivity">
        </activity>
        <activity
                android:name=".activity.anime.AnimeHomeActivity"
                android:label="@string/title_activity_anime_home"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activity.movie.MovieHomeActivity"
                android:label="@string/title_activity_movie_home"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activity.movie.MovieCreateActivity">
        </activity>
        <activity android:name=".activity.about.AboutActivity">
        </activity>
    </application>

</manifest>